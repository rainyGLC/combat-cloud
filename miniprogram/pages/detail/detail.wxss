/*内容信息模块*/
.topic-container{
  padding: 30rpx;
  background-color: #fff;
}
.topic-userInfo{
  display: flex;
  margin-bottom: 20rpx;
  line-height: 40rpx;
}
.topic-userInfo .topic-userInfo-avatar{
  flex: none;
  width: 84rpx;
  height: 84rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}
.topic-userInfo .topic-userInfo-nickName{
  font-size: 14px;
  color: #606686;
  margin-bottom: 4rpx;
}
.topic-userInfo .topic-userInfo-date_display{
  font-size: 10px;
  color: #999;
}
.topic-container .topic-content{
  font-size: 14px;
  color: #666;
  text-align: justify;
  word-break: break-all;
}
.topics-resource .resource-item{
  width: 100%;
  height: 300rpx;
  background-color: #f5f5f5;
}
.resource-video-controls{
  width: 100%;
  height: 100%;
}

/*登录功能模块*/
.login-container{
  margin-bottom: 30rpx;
}
.login-container .login-btn{
  margin: 0 30rpx;
  font-size: 30rpx;
  color: #fff;
  line-height: 80rpx;
  height: 80rpx;
  background-color: #606686;
  border-radius: 0;
}
.login-container .login-btn_hover{
  opacity: .8;
}

/*评论功能模块*/
.textarea-container{
  position: relative;
  margin-bottom: 30rpx;
}
.textarea-container .textarea-input{
  box-sizing: border-box;
  display: block;
  font-size: 16px;
  color: #666;
  height: 80rpx;
  width: 100%;
  padding-left: 30rpx;
  padding-right: 160rpx;
  line-height: 40rpx;
}
.textarea-container .textarea-btn{
  position: absolute;
  top: 0;
  right: 30rpx;
  border-radius: 0;
  font-size: 14px;
  background-color: #606686;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  border: 0;
  width: 120rpx;
}

/*评论列表模块*/
.reply-container{
  background-color: #f5f5f5;
}
.reply-item{
  display: flex;
  padding: 30rpx 24rpx;
  border-bottom: 1px solid #e4e4e4;
  line-height: 40rpx;
}
.reply-item .reply-hd{
  flex: none;
}
.reply-item .reply-bd{
  flex: 1;
}
.reply-item .reply-avatar{
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  background-color: #ccc;
}
.reply-item .reply-nickName{
  font-size: 14px;
  color: #606686;
}
.reply-item .reply-content{
  font-size: 14px;
  color: #333;
  margin-bottom: 10px;
}
.reply-item .reply-info{
  font-size: 10px;
  color: #999;
}