/*评论列表模块*/
.reply-container{
  background-color: #f5f5f5;
}
.reply-item{
  display: flex;
  padding: 30rpx 24rpx;
  border-bottom: 1px solid #e4e4e4;
  line-height: 40rpx;
}
.reply-item .reply-hd{
  flex: none;
}
.reply-item .reply-bd{
  flex: 1;
}
.reply-item .reply-avatar{
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  background-color: #ccc;
}
.reply-item .reply-nickName{
  font-size: 14px;
  color: #606686;
}
.reply-item .reply-content{
  font-size: 14px;
  color: #333;
  margin-bottom: 10px;
}
.reply-item .reply-info{
  font-size: 10px;
  color: #999;
}